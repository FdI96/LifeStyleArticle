<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<div class="first-row row">
  <img src="https://cars.usnews.com/pics/size/640x420/static/images/article/202003/128416/1_title_2019_kia_cadenza_640x420.jpg" alt="most-voted-article" class="most-voted-img">
</div>
<div class="second-row row">
  <table>
    <tbody class="tbody d-inline-flex justify-content-center row">
      <% @categories.each do |category| %>
        <tr class="col-3">
          <td><%= link_to "#{category.name}", category %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
